<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btSubmit"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvNum1"
        android:layout_marginTop="50dp"
        android:textSize="26sp"
        android:layout_below="@+id/btSubmit"
        android:layout_toLeftOf="@+id/btSubmit"
        android:layout_toStartOf="@+id/btSubmit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvNum2"
        android:textSize="26sp"
        android:layout_alignTop="@+id/tvNum1"
        android:layout_toRightOf="@+id/btSubmit"
        android:layout_toEndOf="@+id/btSubmit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/tvNum2"
        android:layout_centerHorizontal="true"
        android:width="30dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct:"
        android:id="@+id/textView5"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView4"
        android:layout_toLeftOf="@+id/tvNum1"
        android:layout_toStartOf="@+id/tvNum1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong:"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/tvCorrectsNum"
        android:layout_alignRight="@+id/btSubmit"
        android:layout_alignEnd="@+id/btSubmit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvCorrectsNum"
        android:textSize="20sp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignRight="@+id/tvNum1"
        android:layout_alignEnd="@+id/tvNum1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvWrongNum"
        android:textSize="20sp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignRight="@+id/tvNum2"
        android:layout_alignEnd="@+id/tvNum2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etAnswer"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/tvNum2"
        android:layout_alignEnd="@+id/tvNum2"
        android:layout_alignLeft="@+id/tvNum1"
        android:numeric="integer"
        android:layout_alignStart="@+id/tvNum1" />

</RelativeLayout>
